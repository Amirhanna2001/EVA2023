@model AreaViewModel
@{
    ViewData["title"] = "Add New Area";
}
<h1>@ViewData["title"]</h1>
<hr />
<form method="post" asp-action="Add" class="col-6">
    <div class="mb-3">
        <label  class="form-label" asp-for="Name"></label>
        <input   class="form-control"  asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label  class="form-label" asp-for="AvailableSpots"></label>
        <input type="number"  class="form-control"  asp-for="AvailableSpots">
        <span asp-validation-for="AvailableSpots" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-secondary">Submit</button>
</form>
