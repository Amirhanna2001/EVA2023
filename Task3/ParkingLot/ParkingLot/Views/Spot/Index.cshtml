@model List<SpotViewModel>

@{
    ViewData["Title"] = "All Spots";
}
<h1>@ViewData["Title"]</h1>

<hr />
@if(Model.Any()){
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Vehicle Name</th>
                <th>Type</th>
                <th>Area</th>
                <th>Actions</th>


            </tr>
        </thead>
        @for (int i = 0, j = 1; i < Model.Count; ++i, ++j)
        {
            <tbody>
                <tr>
                    <th scope="row">@j</th>
                    <td>@Model[i].PlatNumber</td>
                    <td>@Model[i].Type</td>
                    <td>@Model[i].Area</td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model[i].Id"
                           onclick="return confirm('Are you sure you want to delete @Model[i].PlatNumber ?')">Delete</a>
                    </td>
                </tr>

            </tbody>
        }

    </table>

}
else{

    <div class="alert-warning">No Spots Found !</div>

}